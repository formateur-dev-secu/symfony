{% extends 'base.html.twig' %}

{% block body %}
    {% for post in posts %}
        <article>
            <h2>{{ post.title|upper }}</h2>
            <p>
                {{ post.content }}
            </p>
            <a href="{{ path('article_display', {slug : post.slug}) }}">Voir +</a>
        </article>
    {% endfor %}
{% endblock %}
